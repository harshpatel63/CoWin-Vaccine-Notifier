<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutMisc"
    android:elevation="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_horizontal_rule_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textFilterOptions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#8c8c8c"/>

    <TextView
        android:id="@+id/textFilterOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/filter_options"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"/>
        <TextView
            android:id="@+id/textSelectAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_age"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@id/textFilterOptions"
            app:layout_constraintBottom_toBottomOf="@id/checkboxEighteen"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            />
        <CheckBox
            android:id="@+id/checkboxEighteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_18plus"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/textFilterOptions"
            app:layout_constraintLeft_toRightOf="@id/textSelectAge"/>
        <CheckBox
            android:id="@+id/checkboxFortyFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_45plus"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/textFilterOptions"
            app:layout_constraintLeft_toRightOf="@id/checkboxEighteen"/>

        <TextView
            android:id="@+id/textSelectFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_fee"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="@id/checkboxFree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/checkboxFree"
            android:textSize="14sp"
            />
        <CheckBox
            android:id="@+id/checkboxFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxEighteen"
            app:layout_constraintLeft_toRightOf="@id/textSelectFee"/>
        <CheckBox
            android:id="@+id/checkboxPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxFortyFive"
            app:layout_constraintLeft_toRightOf="@id/checkboxFree"/>


        <TextView
            android:id="@+id/textSelectVaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_vaccine"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="@id/checkboxCovishield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/checkboxCovishield"
            android:textSize="14sp"
            />
        <CheckBox
            android:id="@+id/checkboxCovishield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/covishield"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxFree"
            app:layout_constraintLeft_toRightOf="@id/textSelectVaccine"/>
        <CheckBox
            android:id="@+id/checkboxCovaxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/covaxin"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxPaid"
            app:layout_constraintLeft_toRightOf="@id/checkboxCovishield"/>

        <CheckBox
            android:id="@+id/checkboxModerna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moderna"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxCovishield"
            app:layout_constraintLeft_toRightOf="@id/textSelectVaccine"/>
        <CheckBox
            android:id="@+id/checkboxSputnikV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sputnik_v"
            android:layout_margin="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxCovaxin"
            app:layout_constraintLeft_toRightOf="@id/checkboxModerna"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>